<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= t("activerecord.attributes.user.name") %>: <%= @user.name %>
      </h1>

      <p><%= t("activerecord.attributes.user.created_at") %>: <%= l(@user.created_at, format: :long) %></p>
      <p><%= t("activerecord.attributes.user.updated_at") %>: <%= l(@user.updated_at, format: :long) %></p>
    </section>
  </aside>
</div>
