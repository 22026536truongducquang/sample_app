<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <p><%= t(".created_at") %>: <%= l(@user.created_at) %></p>
        <p><%= t(".updated_at") %>: <%= l(@user.updated_at) %></p>
      </h1>
    </section>
  </aside>
  <%# Micropost %>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3><%= t(".microposts", count: @user.microposts.count) %></h3>
      
      <ol class="microposts">
        <%= render @microposts %>
      </ol>

      <%== pagy_bootstrap_nav(@page) %>
    <% end %>
  </div>
</div>
