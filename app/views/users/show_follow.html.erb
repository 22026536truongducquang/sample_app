<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_my_profile"), @user %></span>
      <span><b><%= t(".microposts") %></b><%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
      <div class="user_avatars">
        <% users_to_show = users_to_show(@user, action_name) %>
        <% users_to_show.each do |user| %>
          <%= link_to user_path(user) do %>
            <%= gravatar_for(user, size: Settings.sizes.size_36) %>
          <% end %>
        <% end %>
      </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
    <ul class="users follow">
      <%= render @users %>
    </ul>
    <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
